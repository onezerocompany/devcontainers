{
	"id": "playwright",
	"name": "Playwright",
	"version": "1.1.0",
	"description": "Installs Playwright and all browser dependencies for end-to-end testing in development containers.",
	"documentationURL": "https://github.com/onezerocompany/devcontainers/tree/main/features/src/playwright",
	"licenseURL": "https://github.com/onezerocompany/devcontainers/blob/main/LICENSE",
	"keywords": [
		"playwright",
		"testing",
		"e2e",
		"browser",
		"chromium",
		"firefox",
		"webkit",
		"headless",
		"automation"
	],
	"options": {
		"version": {
			"type": "string",
			"default": "latest",
			"description": "Playwright version to install (e.g., '1.40.0', 'latest')"
		},
		"browsers": {
			"type": "string",
			"default": "chromium firefox webkit",
			"description": "Space-separated list of browsers to install (chromium, firefox, webkit)"
		},
		"install_deps": {
			"type": "boolean",
			"default": true,
			"description": "Install system dependencies for browsers"
		}
	}
}