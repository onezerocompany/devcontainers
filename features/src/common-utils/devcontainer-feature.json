    },
    "podman": {
      "type": "boolean",
      "default": false,
      "description": "Install podman (container runtime)"
    },
    "buildah": {
      "type": "boolean",
      "default": false,
      "description": "Install buildah (container image builder)"
    },
    "trivy": {
      "type": "boolean",
      "default": false,
      "description": "Install trivy (security scanner)"
    },
    "dive": {
      "type": "boolean",
      "default": false,
      "description": "Install dive (container image analyzer)"
