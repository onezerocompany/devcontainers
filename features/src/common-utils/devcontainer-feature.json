{
  "id": "common-utils",
  "name": "Common Utilities",
  "version": "1.3.1",
  "description": "Comprehensive development utilities with modern CLI tools, shell configurations, and customizable tool bundles. Features both bundle-level and individual tool-level control for maximum flexibility.",
  "documentationURL": "https://github.com/onezerocompany/devcontainers/tree/main/features/src/common-utils",
  "options": {
    "zsh": {
      "type": "boolean",
      "default": true,
      "description": "Install Zsh shell"
    },
    "defaultShell": {
      "type": "string",
      "enum": [
        "zsh",
        "bash"
      ],
      "default": "zsh",
      "description": "Default shell to set for the user"
    },
    "corePackages": {
      "type": "boolean",
      "default": true,
      "description": "Install core system utilities (curl, wget, zip, tree, htop, vim, etc.)"
    },
    "bat": {
      "type": "boolean",
      "default": true,
      "description": "Install bat (syntax highlighting cat)"
    },
    "eza": {
      "type": "boolean", 
      "default": true,
      "description": "Install eza (modern ls)"
    },
    "zoxide": {
      "type": "boolean",
      "default": true,
      "description": "Install zoxide (smart directory navigation)"
    },
    "starship": {
      "type": "boolean",
      "default": true,
      "description": "Install starship (cross-shell prompt)"
    },
    "fd": {
      "type": "boolean",
      "default": true,
      "description": "Install fd (modern find)"
    },
    "ripgrep": {
      "type": "boolean",
      "default": true,
      "description": "Install ripgrep (modern grep)"
    },
    "kubectl": {
      "type": "boolean",
      "default": true,
      "description": "Install kubectl (Kubernetes CLI)"
    },
    "k9s": {
      "type": "boolean",
      "default": true,
      "description": "Install k9s (Kubernetes TUI)"
    },
    "helm": {
      "type": "boolean",
      "default": true,
      "description": "Install helm (Kubernetes package manager)"
    },
    "kustomize": {
      "type": "boolean",
      "default": true,
      "description": "Install kustomize (Kubernetes config management)"
    },
    "flux": {
      "type": "boolean",
      "default": true,
      "description": "Install flux (GitOps toolkit)"
    },
    "kind": {
      "type": "boolean",
      "default": true,
      "description": "Install kind (Kubernetes in Docker)"
    },
    "httpie": {
      "type": "boolean",
      "default": true,
      "description": "Install HTTPie (HTTP client)"
    },
    "nginx": {
      "type": "boolean",
      "default": false,
      "description": "Install nginx web server"
    },
    "databaseClients": {
      "type": "boolean",
      "default": true,
      "description": "Install database clients (postgresql-client, redis-tools)"
    },
    "jq": {
      "type": "boolean",
      "default": true,
      "description": "Install jq (JSON processor)"
    },
    "yq": {
      "type": "boolean",
      "default": true,
      "description": "Install yq (YAML processor)"
    },
    "dasel": {
      "type": "boolean",
      "default": false,
      "description": "Install dasel (multi-format data processor)"
    },
    "miller": {
      "type": "boolean",
      "default": false,
      "description": "Install miller (data processing)"
    },
    "gitExtras": {
      "type": "boolean",
      "default": false,
      "description": "Install git extras"
    },
    "githubCli": {
      "type": "boolean",
      "default": false,
      "description": "Install GitHub CLI (gh)"
    },
    "gitlabCli": {
      "type": "boolean",
      "default": false,
      "description": "Install GitLab CLI (glab)"
    },
    "buildEssentials": {
