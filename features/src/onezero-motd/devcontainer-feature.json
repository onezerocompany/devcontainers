{
	"id": "onezero-motd",
	"version": "2.0.0",
	"name": "OneZero MOTD",
	"documentationURL": "https://github.com/onezerocompany/devcontainers",
	"description": "Adds OneZero ASCII MOTD (Message of the Day) with customizable message",
	"options": {
		"message": {
			"type": "string",
			"default": "Happy coding!",
			"description": "Custom message to display"
		},
		"enable": {
			"type": "boolean",
			"default": true,
			"description": "Enable or disable the MOTD display"
		}
	},
	"installsAfter": ["ghcr.io/onezerocompany/features/modern-shell"],
	"dependsOn": {
		"ghcr.io/onezerocompany/features/modern-shell": {}
	}
}
