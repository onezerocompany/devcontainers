# Bash configuration for devcontainer with modern tools

# Path configuration
export PATH="$HOME/.local/bin:$PATH"

# Display MOTD on interactive shell startup
if [[ $- == *i* ]] && [ -z "$MOTD_SHOWN" ]; then
    export MOTD_SHOWN=1
    {{MOTD_DISPLAY}}
fi

# Tool activation: Mise (runtime version manager)
if [ -f "$HOME/.local/bin/mise" ]; then
    eval "$($HOME/.local/bin/mise activate bash)"
fi

# Modern CLI tools aliases
{{MISE_ALIASES}}
{{EZA_ALIASES}}
{{BAT_ALIASES}}
{{STARSHIP_INIT}}
{{ZOXIDE_INIT}}