{
  "id": "modern-shell",
  "name": "Modern Shell Tools",
  "version": "1.1.0",
  "description": "Installs and configures modern CLI tools: zsh, starship prompt, zoxide, eza, bat, and shell configurations",
  "documentationURL": "https://github.com/onezerocompany/devcontainers/tree/main/features/src/modern-shell",
  "options": {
    "defaultShell": {
      "type": "string",
      "enum": ["zsh", "bash"],
      "default": "zsh",
      "description": "Default shell to set for the user"
    },
    "installStarship": {
      "type": "boolean",
      "default": true,
      "description": "Install Starship cross-shell prompt"
    },
    "installZoxide": {
      "type": "boolean",
      "default": true,
      "description": "Install zoxide (smarter cd command)"
    },
    "installEza": {
      "type": "boolean",
      "default": true,
      "description": "Install eza (modern ls replacement)"
    },
    "installBat": {
      "type": "boolean",
      "default": true,
      "description": "Install bat (modern cat with syntax highlighting)"
    },
    "configureForRoot": {
      "type": "boolean",
      "default": true,
      "description": "Also configure shells for root user"
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils"
  ]
}