{
  "image": "ghcr.io/onezerocompany/devcontainer:base",
  "remoteUser": "zero",
  "features": {
    "ghcr.io/onezerocompany/features/sandbox:1": {}
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "astro-build.astro-vscode",
        "biomejs.biome",
        "oven.bun-vscode",
        "Anthropic.claude-code",
        "docker.docker"
      ]
    }
  }
}