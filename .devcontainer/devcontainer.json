{
  "name": "devcontainers",
  "image": "ghcr.io/onezerocompany/devcontainer:dind",
  "postCreateCommand": "/usr/local/bin/devcontainer-post-create",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh",
            "args": ["-l"]
          }
        },
        "workbench.action.terminal.focus": true
      },
      "extensions": []
    },
    "codespaces": {
      "openFiles": []
    }
  },
  "remoteUser": "zero"
}
