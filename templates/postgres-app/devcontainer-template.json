{
  "id": "postgres-app",
  "version": "1.0.0",
  "name": "App with PostgreSQL",
  "description": "Development container with PostgreSQL database in a sidecar container",
  "documentationURL": "https://github.com/onezerocompany/devcontainers/tree/main/templates/postgres-app",
  "platforms": ["linux/amd64", "linux/arm64"],
  "keywords": ["onezero", "postgres", "postgresql", "database", "sidecar"],

  "options": {
    "postgresVersion": {
      "type": "string",
      "enum": ["13", "14", "15", "16", "latest"],
      "default": "15",
      "description": "PostgreSQL version"
    },
    "databaseName": {
      "type": "string",
      "default": "app",
      "description": "Name of the default database to create"
    },
    "databaseUser": {
      "type": "string",
      "default": "postgres",
      "description": "Database username"
    },
    "databasePassword": {
      "type": "string",
      "default": "postgres",
      "description": "Database password"
    },
    "enableSampleData": {
      "type": "boolean",
      "default": false,
      "description": "Load sample data on database initialization"
    }
  }
}
