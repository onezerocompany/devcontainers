{
  "name": "Base DevContainer with Sandbox",
  "image": "ghcr.io/onezerocompany/devcontainer:base",
  "containerEnv": {
    // These environment variables control sandbox behavior
    // They are set at container creation time and cannot be modified from inside
    "DEVCONTAINER_SANDBOX_ENABLED": "true",
    "DEVCONTAINER_SANDBOX_FIREWALL": "true",
    "DEVCONTAINER_SANDBOX_ALLOWED_DOMAINS": "example.com,myapi.com"
  },
  "capAdd": ["NET_ADMIN"],
  "remoteUser": "zero",
  "customizations": {
    "vscode": {
      "extensions": []
    }
  }
}